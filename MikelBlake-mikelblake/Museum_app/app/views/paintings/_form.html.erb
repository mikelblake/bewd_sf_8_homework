<% if @painting.errors.any? %>
  <h2>There were errors saving your painting</h2>
  <ul>
    <% @painting.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>


<%= form_for @painting do |f| %>
  <fieldset>
    <div class='fields'>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class='fields'>
      <%= f.label :image %>
      <%= f.text_field :image %>
    </div>

    <div class='fields'>
      <%= f.label :artist %>
      <%= f.select :artist_id, @artists %>

    <div class='fields'>
      <%=f.label :museum %>
      <%= f.select :museum_id, @museums %>
    </div>
  </fieldset>
  <%= f.submit %>
<% end %>