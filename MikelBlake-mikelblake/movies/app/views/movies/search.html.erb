<%= form_tag movies_search_path, method: 'GET' do %>
  <%= text_field_tag :q, params[:q] %>
  <%= submit_tag 'Search' %>
<%end%>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Year Released</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.description %></td>
        <td><%= movie.year_released %></td>
      </tr>
    <% end %>
  </tbody>
</table>
